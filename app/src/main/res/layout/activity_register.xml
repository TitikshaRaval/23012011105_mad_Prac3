<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/guni_pink_logo"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_login"
        app:cardElevation="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:background="@drawable/border"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="User name"
                android:id="@+id/Text_1"
                android:layout_marginTop="@dimen/reg_top_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <View
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Text_6"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Text_1"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/Text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                app:layout_constraintTop_toBottomOf="@id/Text_1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/reg_top_margin" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="@+id/Text_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/Text_2"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/Text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                app:layout_constraintTop_toBottomOf="@id/Text_2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/reg_top_margin"
                />

            <EditText
                android:id="@+id/edit_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@+id/Text_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/Text_3"
                android:layout_marginLeft="80dp"/>

            <TextView
                android:id="@+id/Text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/Text_3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/reg_top_margin"/>

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@+id/Text_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/Text_4"
                android:layout_marginLeft="90dp"
                />

            <TextView
                android:id="@+id/Text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/Text_4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/reg_top_margin"/>

            <EditText
                android:id="@+id/edit_ph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@+id/Text_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/Text_5"
                android:layout_marginLeft="55dp"
                />

            <TextView
                android:id="@+id/Text_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm password"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/Text_5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/reg_top_margin"/>

            <EditText
                android:id="@+id/edit_cop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@+id/Text_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/Text_6"
                android:layout_marginLeft="10dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="35dp"
        android:text="Register"
        android:translationZ="30dp"
        android:layout_marginBottom="-20dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_login"
        app:layout_constraintStart_toStartOf="@id/card_login"
        app:layout_constraintEnd_toEndOf="@id/card_login" />
    <TextView
        android:id="@+id/Text_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do You have an account?"
        app:layout_constraintTop_toBottomOf="@id/card_login"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/reg_top_margin"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/Text_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/white"
        android:text="@string/login"
        android:textColor="@color/purple"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/Text_7"
        app:layout_constraintTop_toTopOf="@id/Text_7" />

</androidx.constraintlayout.widget.ConstraintLayout>